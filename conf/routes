# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /export                     controllers.Application.handleExport

GET     /ws                         controllers.Logging.ws
GET     /logging                    controllers.Logging.startLogging
GET     /logging/:id                controllers.Logging.retrieveData(id)
POST    /logging/:id                controllers.Logging.logData(id)

GET     /hubtest                    controllers.HubNet.hubTest
GET     /hubdata                    controllers.HubNet.hubData
POST    /hubnet                     controllers.HubNet.handleHubNet


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
